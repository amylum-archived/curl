name 'curl'
org 'amylum'

licenses 'COPYING'

deps(
  zlib: '1.2.8-4',
  openssl: '1.0.2h-7'
)

configure_flags(
  prefix: '/usr',
  mandir: '/usr/share/man',
  'enable-ipv6': nil,
  'enable-threaded-resolver': nil,
  'with-gssapi': nil,
  'with-libidn': nil,
  'with-random': '/dev/urandom',
  'with-ca-bundle': '/etc/ssl/certs/ca-certificates.crt'
)

cflags
harden

build do
  run 'autoreconf -i'
  configure
  make
  install
end

test do
  run 'ssh -V'
  run 'ssh-keygen -f /tmp/fakekey -N ""'
end
