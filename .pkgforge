name 'curl'
org 'amylum'

licenses 'COPYING'

deps(
  zlib: '1.2.8-4',
  openssl: '1.0.2h-7'
)

configure_flags(
  prefix: '/usr',
  mandir: '/usr/share/man',
  'enable-ipv6': nil
)

cflags
harden

build do
  run 'autoreconf -i'
  configure
  make
  install
end

test do
  run 'ssh -V'
  run 'ssh-keygen -f /tmp/fakekey -N ""'
end
