name 'curl'
org 'amylum'

licenses 'COPYING'

deps(
  zlib: {
    version: '1.2.11-6',
    checksum: '7da7212123edac6d5d5dc2db8fb10a6af06472578840c51e489e1f391b66c208'
  },
  openssl: {
    version: '1.1.1a-1',
    checksum: '70b9b57ef55293a4df4cc18776dc56d77d78856960bcc6571f8a009f00faf266'
  }
)
remove_linker_archives
remove_pkgconfig_files

configure_flags(
  prefix: '/usr',
  mandir: '/usr/share/man',
  'enable-ipv6': nil,
  'enable-threaded-resolver': nil,
  'with-ca-bundle': '/etc/ssl/certs/ca-certificates.crt',
  host: 'x86_64-pc-linux-gnu',
  build: 'x86_64-unknown-linux-gnu'
)

cflags
harden

build do
  run './buildconf'
  configure
  make
  install
end

test do
  run 'curl -V'
end
