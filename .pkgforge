name 'curl'
org 'amylum'

licenses 'COPYING'

deps(
  zlib: {
    version: '1.2.11-1',
    checksum: '5596e2d39ef98e2323ac415f50afa71a433ed65c23e8d1f2723f711f5ffb4f32'
  },
  openssl: {
    version: '1.1.0g-1',
    checksum: 'f70d94ca94f05be4a14438cf29ed4695d9731d023a4b72d30126d826720bc48b'
  }
)
remove_linker_archives
remove_pkgconfig_files

configure_flags(
  prefix: '/usr',
  mandir: '/usr/share/man',
  'enable-ipv6': nil,
  'enable-threaded-resolver': nil,
  'with-ca-bundle': '/etc/ssl/certs/ca-certificates.crt',
  host: 'x86_64-pc-linux-gnu',
  build: 'x86_64-unknown-linux-gnu'
)

cflags
harden

build do
  run './buildconf'
  configure
  make
  install
end

test do
  run 'curl -V'
end
