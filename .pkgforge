name 'curl'
org 'amylum'

licenses 'COPYING'

deps(
  zlib: {
    version: '1.2.11-1',
    checksum: '5596e2d39ef98e2323ac415f50afa71a433ed65c23e8d1f2723f711f5ffb4f32'
  },
  openssl: {
    version: '1.0.2m-1',
    checksum: '263c64d3c4cde7f0f695a08453738842ceb6f2273882123e10ba4bbad619f9e0'
  }
)

configure_flags(
  prefix: '/usr',
  mandir: '/usr/share/man',
  'enable-ipv6': nil,
  'enable-threaded-resolver': nil,
  'with-ca-bundle': '/etc/ssl/certs/ca-certificates.crt'
)

cflags
harden

build do
  run './buildconf'
  configure
  make
  install
end

test do
  run 'curl -V'
end
